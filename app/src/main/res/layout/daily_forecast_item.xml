<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="5dp"
    android:background="#51A2D5">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_day"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="Chủ nhật"
        android:textColor="@color/white"
        android:textSize="20dp"></androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:text="12-6"
        android:textColor="#C1FFFFFF"
        android:textSize="15dp"></androidx.appcompat.widget.AppCompatTextView>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="160dp"
        android:background="@drawable/_01_s"></ImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_temp_max"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="280dp"
        android:text="38"
        android:textColor="@color/white"
        android:textSize="25dp"></androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_temp_min"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="320dp"
        android:text="/ 26"
        android:textColor="#C1FFFFFF"
        android:textSize="25dp"></androidx.appcompat.widget.AppCompatTextView>
</RelativeLayout>